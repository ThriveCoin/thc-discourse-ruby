<div class="admin-emojis">
  <h1>{{i18n "admin.emoji.title"}}</h1>

  <p class="desc">{{i18n "admin.emoji.help"}}</p>

  {{emoji-uploader
    emojiGroups=emojiGroups
    done=(action "emojiUploaded")
    id="emoji-uploader"
  }}

  <hr>

  {{#if sortedEmojis}}
    <table id="custom_emoji">
      <thead>
        <tr>
          <th>{{i18n "admin.emoji.image"}}</th>
          <th>{{i18n "admin.emoji.name"}}</th>
          <th colspan="2">
            {{combo-box
              value=filter
              content=sortingGroups
              nameProperty=null
              valueProperty=null
              onChange=(action "filterGroups")
            }}
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each sortedEmojis as |e|}}
          <tr>
            <td><img class="emoji emoji-custom" src={{e.url}} title={{e.name}} alt={{i18n "admin.emoji.alt"}}></td>
            <td>:{{e.name}}:</td>
            <td>{{e.group}}</td>
            <td class="action">
              {{d-button
                action=(action "destroyEmoji" e)
                class="btn-danger"
                icon="far-trash-alt"
              }}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/if}}
</div>
